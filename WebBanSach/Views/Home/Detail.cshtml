@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.book != null)
{
    var book = ViewBag.book;
    <div class="book-detail" style="display: flex; align-items: flex-start; margin: 20px; padding: 20px; border: 1px solid #ddd; border-radius: 5px;">
        <div class="book-image" style="flex: 0 0 auto; margin-right: 20px;">
            <img src="~/Images/@book.Hinhminhhoa" alt="@book.Tensach" style="max-width: 200px; height: 300px; border-radius: 5px;" />
        </div>
        <div class="book-info" style="flex: 1;">
            <h3>@book.Tensach</h3>
            <p><strong>Giá:</strong> @book.Dongia.ToString("C")</p>
            <p><strong>Đơn vị tính:</strong> @book.Donvitinh</p>
            <p><strong>Mô tả:</strong> @book.Mota</p>
            <p><strong>Ngày cập nhật:</strong> @book.Ngaycapnhat</p>
            <p><strong>Số lượng bán:</strong> @book.Soluongban</p>
            <p><strong>Số lần xem:</strong> @book.solanxem</p>
        </div>
    </div>
    <div class="buy_now_button" style="text-align: right; margin-top: 20px;">
        <a href="/Purchase?bookId=@book.Masach" style="display: inline-block; padding: 10px 20px; background-color: #28a745; color: white; text-decoration: none; border-radius: 5px;">Mua Ngay</a>
    </div>
    <div class="back_button" style="margin-top: 10px;">
        <a href="@Url.Action("Index", "Home")" style="text-decoration: underline; color: #007bff;">Quay lại danh sách sách</a>
    </div>

}
else
{
    <p>Không tìm thấy thông tin sách.</p>
}
